<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/txtUser"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Tonny Montana "
        android:paddingTop="10dp"
        android:paddingLeft="50dp"/>

    <Button
        android:id="@+id/btnAllBooks"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtUser"
        android:layout_centerHorizontal="true"
        android:text="See All Books"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnCurrent"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Currently Reading"
        android:layout_below="@+id/btnAllBooks"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnWishList"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Book wishlist"
        android:layout_below="@+id/btnCurrent"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/btnFavorites"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Favorite Books"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnWishList"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btnFinished"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Finished Books"
        android:layout_below="@+id/btnFavorites"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/btnAbout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="About"
        android:layout_below="@+id/btnFinished"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/txtLicence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/licence"
        android:layout_below="@+id/btnAbout"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>